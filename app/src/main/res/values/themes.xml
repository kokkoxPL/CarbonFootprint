<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CarbonFootprint" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_variant_light</item>
        <item name="colorPrimaryContainer">@color/blue</item>
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>

    <style name="Theme.CarbonFootprint" parent="Base.Theme.CarbonFootprint" />
    <style name="Theme.CarbonFootprint.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CarbonFootprint.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CarbonFootprint.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>